{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@peochain/types": ["../../packages/types/src"],
      "@peochain/types/*": ["../../packages/types/src/*"],
      "@peochain/utils": ["../../packages/utils/src"],
      "@peochain/utils/*": ["../../packages/utils/src/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}