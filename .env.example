# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/peochain_development
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=localhost

# InfluxDB Configuration for Analytics
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_BUCKET=peochain_analytics
INFLUXDB_ORG=peochain

# Redis Configuration for ActionCable and Rate Limiting
REDIS_URL=redis://localhost:6379/1

# API Authentication
API_USERNAME=admin
API_PASSWORD=peochain

# Application Settings
RAILS_ENV=development
SECRET_KEY_BASE=development_secret_key_base
RAILS_MAX_THREADS=5

# Email Configuration for Mailers
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@peochain.com