{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@peochain/types": ["./packages/types/src"],
      "@peochain/types/*": ["./packages/types/src/*"],
      "@peochain/utils": ["./packages/utils/src"],
      "@peochain/utils/*": ["./packages/utils/src/*"]
    }
  },
  "exclude": ["node_modules"]
}