{
  "name": "peochain",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @peochain/server dev & pnpm --filter @peochain/client dev",
    "build": "pnpm --filter @peochain/server build & pnpm --filter @peochain/client build",
    "start": "pnpm --filter @peochain/server start",
    "check": "pnpm -r check",
    "db:push": "pnpm --filter @peochain/server db:push"
  },
  "devDependencies": {
    "typescript": "5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}